{% extends 'templates/app.twig' %}

	{% block content %}
<div class="row">
	<div class="col-md-10">
		<div id="postlist">
			<div class="panel">
                <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">
                            <div class="col-sm-9">
                                <h3 class="pull-left">{{ country.name }} - {{country.code}}
                                    
                                </h3>
                            </div>
                            
                        </div>
                    </div>
                </div>
                
           
            
            <!-- <div class="panel-footer">
                <span class="label label-default">Welcome</span> <span class="label label-default">Updates</span> <span class="label label-default">July</span>
            </div> -->
        </div>
        
       </div>
    </div>
    <!-- Only the owner of this post and the admin can edit and delete it -->
     {% if  (auth.user.role_id <= 3) %}
		<div class="text-center">
            <p><a href="{{ path_for('countries.edit', {'id': country.id } ) }}" class="btn btn-primary">Editar pais</a>
                </p>
                <p> <a onclick="return confirm('Esta seguro que quiere borrar este pais?');"  href="{{ path_for('countries.delete', {'id': country.id } ) }}" class="btn btn-warning">Borrar Pais</a>
        
                </p>
          </div>
             
    {% endif %}
    </div>
        <div class="col-md-1"></div>
